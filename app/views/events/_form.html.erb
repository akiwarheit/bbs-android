<%= form_for(@event, :html => { :multipart => true }) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :what %><br />
    <%= f.text_field :what %>
  </div>
  <div class="field">
    <%= f.label :when %><br />
    <%= f.date_select :when %>
  </div>
  <div class="field">
    <%= f.label :where %><br />
    <%= f.text_field :where %>
  </div>
  <div class="field">
  	<%= f.label :organization %>
  	<%= select :event, :organization_id, 
  						 Organization.all.map {|o| [o.description, o.id] } %>
  </div>
  
  <div class="field">
  	<%= f.label 'Avatar' %>
  	<%= f.file_field :image %>
	</div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
